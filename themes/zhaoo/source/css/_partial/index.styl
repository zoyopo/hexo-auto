.post
  @media (min-width: 768px)
    padding-top 45px
  .post-item
    margin-bottom 30px
    .post-wrap:hover
      box-shadow $color-shadow-active
    .post-wrap
      box-shadow $color-shadow
      background-color $color-background
      .post-top
        z-index 10
        width 80px
        height 80px
        overflow hidden
        position absolute
        top 0
        div
          line-height 18px
          text-align center
          -webkit-transform rotate(-45deg)
          -moz-transform rotate(-45deg)
          -ms-transform rotate(-45deg)
          -o-transform rotate(-45deg)
          position relative
          padding 3px 0
          top 10px
          left -28px
          width 100px
          background-color #FF3B00
          color $color-white
          box-shadow -3px 5px 6px -5px rgba(0, 0, 0, 0.5)
      .post-image
        display block
        position relative
        width 100%
        height 0
        padding-bottom 80%
        background linear-gradient(45deg, rgba(29,97,76,0.48), transparent)
        img
          position absolute
          transform translateX(-50%) translateY(-50%)
          max-height initial
          top 50%
          left 50%
          width 70%          
          overflow hidden
          border-radius 41px 0px 40px 0
          box-shadow -9px 10px 5px rgba(4,5,5,0.42)
        img, img:hover
          transition $transition
        img:hover
          opacity 0.7
          border-radius 0
      .post-content
        padding 20px    
        .post-title
          font-size 1.5em     
        .post-excerpt
          height 80px
          p
            color $color-middle
        .post-info
          color $color-light
          .post-info-item
            margin-right 10px
            i
              font-size 1em
              margin-right 5px
